<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GraphicsRendererUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="GraphicsRendererUI.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Graphics Renderer UI" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Object List and Controls -->
        <Grid Grid.Column="0" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Add Object Buttons -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Add Objects" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <Button Content="Add Pyramid" Command="{Binding AddPyramidCommand}" Margin="0,5" Padding="10,5"/>
                <Button Content="Add Box" Command="{Binding AddBoxCommand}" Margin="0,5" Padding="10,5"/>
                <Button Content="Import OBJ File" Command="{Binding AddObjFileCommand}" Margin="0,5" Padding="10,5"/>
            </StackPanel>

            <!-- Object List -->
            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Scene Objects" FontWeight="Bold" Margin="5,5,5,0"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding Objects}" SelectedItem="{Binding SelectedObject}" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Remove Button -->
            <Button Grid.Row="2" Content="Remove Selected" Command="{Binding RemoveObjectCommand}" 
                    Margin="10" Padding="10,5" IsEnabled="{Binding HasSelectedObject}"/>
        </Grid>

        <!-- Right Panel: Properties and Render Settings -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Transform Properties -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Object Properties" FontWeight="Bold" Margin="5,5,5,0"/>
                        <Grid Grid.Row="1" IsEnabled="{Binding HasSelectedObject}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Object Name -->
                        <Grid Grid.Row="0" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding SelectedObject.Name}" Margin="5,0"/>
                        </Grid>

                        <!-- Position -->
                        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Position" FontWeight="Bold" Margin="5,5,5,0"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="X:" Grid.Column="0" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding SelectedObject.PositionX}" Margin="5,0"/>
                                    <TextBlock Text="Y:" Grid.Column="2" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="3" Text="{Binding SelectedObject.PositionY}" Margin="5,0"/>
                                    <TextBlock Text="Z:" Grid.Column="4" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="5" Text="{Binding SelectedObject.PositionZ}" Margin="5,0"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Scale -->
                        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Scale" FontWeight="Bold" Margin="5,5,5,0"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="X:" Grid.Column="0" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding SelectedObject.ScaleX}" Margin="5,0"/>
                                    <TextBlock Text="Y:" Grid.Column="2" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="3" Text="{Binding SelectedObject.ScaleY}" Margin="5,0"/>
                                    <TextBlock Text="Z:" Grid.Column="4" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="5" Text="{Binding SelectedObject.ScaleZ}" Margin="5,0"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Rotation -->
                        <Border Grid.Row="3" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Rotation (Roll, Pitch, Yaw)" FontWeight="Bold" Margin="5,5,5,0"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Roll:" Grid.Column="0" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding SelectedObject.RotationRoll}" Margin="5,0"/>
                                    <TextBlock Text="Pitch:" Grid.Column="2" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="3" Text="{Binding SelectedObject.RotationPitch}" Margin="5,0"/>
                                    <TextBlock Text="Yaw:" Grid.Column="4" VerticalAlignment="Center" Margin="5,0"/>
                                    <TextBox Grid.Column="5" Text="{Binding SelectedObject.RotationYaw}" Margin="5,0"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- OBJ File Path (if applicable) -->
                        <Border Grid.Row="4" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="OBJ File" FontWeight="Bold" Margin="5,5,5,0"/>
                                <TextBox Grid.Row="1" Text="{Binding SelectedObject.ObjFilePath}" IsReadOnly="True" Margin="5"/>
                            </Grid>
                        </Border>
                        </Grid>
                    </Grid>
                </Border>
            </ScrollViewer>

            <!-- Render Settings -->
            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="0,10,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Render Settings" FontWeight="Bold" Margin="5,5,5,0"/>
                    <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Resolution -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Width:" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Grid.Column="1" Text="{Binding RenderWidth}" Margin="5,0"/>
                        <TextBlock Text="Height:" Grid.Column="2" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Grid.Column="3" Text="{Binding RenderHeight}" Margin="5,0"/>
                    </Grid>

                    <!-- Luminosity -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Luminosity:" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Luminosity}" Margin="5,0"/>
                    </Grid>

                    <!-- Output Path -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Output:" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Grid.Column="1" Text="{Binding OutputPath}" Margin="5,0"/>
                        <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseOutputPathCommand}" Margin="5,0" Padding="10,5"/>
                    </Grid>

                    <!-- Status -->
                    <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Margin="5" FontStyle="Italic" Foreground="Gray"/>

                    <!-- Render Button -->
                    <Button Grid.Row="4" Content="Render Scene" Command="{Binding RenderCommand}" 
                            Margin="5" Padding="20,10" FontSize="14" FontWeight="Bold" 
                            Background="#4CAF50" Foreground="White"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
